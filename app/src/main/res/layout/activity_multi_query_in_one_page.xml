<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/query_account_detail_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_bg"
            android:text="query account detail"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

            <com.yuyh.jsonviewer.library.JsonRecyclerView
                android:id="@+id/json_view_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/query_block_detail_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_bg"
            android:text="query account detail"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

            <com.yuyh.jsonviewer.library.JsonRecyclerView
                android:id="@+id/json_view_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>
