<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.arcblock.sdk.demo">

	<application
		android:name=".DemoApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".MainActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustNothing|stateAlwaysHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

        <activity
			android:name=".corekit.QueryBlocksByHeightActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"/>
		<activity
			android:name=".corekit.QueryRichestAccountsActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"/>
		<activity
			android:name=".corekit.BlockDetailActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"/>
		<activity
			android:name=".corekit.TransactionDetailActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"/>
		<activity
			android:name=".corekit.AccountDetailActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"/>
		<activity
			android:name=".corekit.QueryBlocksByHeightForEthActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"/>
	</application>

</manifest>
